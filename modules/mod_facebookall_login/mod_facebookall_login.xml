<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>Facebookall Login</name>
	<author>sourceaddons</author>
	<creationDate>Feb 2013</creationDate>
	<copyright>Copyright (C) 2013 - sourceaddons. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>sourceaddons@ymail.com</authorEmail>
	<authorUrl>www.sourceaddons.com</authorUrl>
	<version>1.1</version>
	<description>MOD_FACEBOOKALL_LOGIN_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_facebookall_login">mod_facebookall_login.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
		<filename>mod_facebookall_login.xml</filename>
	</files>
<help key="JHELP_EXTENSIONS_MODULE_MANAGER_LOGIN" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="pretext"
					type="textarea"
					filter="safehtml"
					cols="30"
					rows="3"
					label="MOD_FACEBOOKALL_LOGIN_FIELD_PRE_TEXT_LABEL"
					description="MOD_FACEBOOKALL_LOGIN_FIELD_PRE_TEXT_DESC" />
				<field
					name="posttext"
					type="textarea"
					filter="safehtml"
					cols="30"
					rows="3"
					label="MOD_FACEBOOKALL_LOGIN_FIELD_POST_TEXT_LABEL"
					description="MOD_FACEBOOKALL_LOGIN_FIELD_POST_TEXT_DESC" />
				<field
					name="login"
					type="menuitem"
					disable="separator"
					label="MOD_FACEBOOKALL_LOGIN_FIELD_LOGIN_REDIRECTURL_LABEL"
					description="MOD_FACEBOOKALL_LOGIN_FIELD_LOGIN_REDIRECTURL_DESC" >
					<option
						value="">JDEFAULT</option>
				</field>

				<field
					name="logout"
					type="menuitem"
					disable="separator"
					label="MOD_FACEBOOKALL_LOGIN_FIELD_LOGOUT_REDIRECTURL_LABEL"
					description="MOD_FACEBOOKALL_LOGIN_FIELD_LOGOUT_REDIRECTURL_DESC" >
					<option
						value="">JDEFAULT</option>
				</field>
				<field
					name="usesecure"
					type="radio"
					default="0"
					label="MOD_FACEBOOKALL_LOGIN_FIELD_USESECURE_LABEL"
					description="MOD_FACEBOOKALL_LOGIN_FIELD_USESECURE_DESC">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
